# Load initramfs for setting device specific password
initramfs initramfs7.img followkernel

# Enable Status LED
dtparam=act_led_trigger=heartbeat
dtoverlay=act-led,gpio=20,activelow=on

# Enable I2C-1 for RTC and Crypto chip
dtparam=i2c1=on
dtoverlay=i2c1-bcm2708,pins_44_45=1

# Enable RTC
dtoverlay=i2c-rtc,pcf8523

# Enable SPI for TNG Base Bricklet
dtparam=spi=on
